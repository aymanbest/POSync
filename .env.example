# POSync Environment Configuration
# Copy this file to .env and modify the values as needed

# ===========================================
# BASIC APPLICATION SETTINGS
# ===========================================

# Application environment (development, production)
NODE_ENV=production

# Application information
APP_NAME=POSync
APP_VERSION=1.1.1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Seed database with sample data on first run (development/testing only)
# Set to true only for development or demo purposes
SEED_DATABASE=false

# Database backup settings (optional)
# AUTO_BACKUP=true
# BACKUP_INTERVAL=24
# MAX_BACKUPS=7

# ===========================================
# SYNC SERVER CONFIGURATION
# ===========================================

# Enable sync server on this machine (for multi-device setup)
# Only enable on ONE device that will act as the central server
START_SYNC_SERVER=false

# Port for the sync server (ensure this port is open/available)
SYNC_SERVER_PORT=3001

# Sync server URL for client devices (uncomment and set for client devices)
# Format: http://server-ip:port or https://your-domain.com:port
# SYNC_SERVER_URL=http://192.168.1.100:3001

# Sync settings (optional)
# SYNC_INTERVAL=30000
# SYNC_RETRY_ATTEMPTS=3
# SYNC_TIMEOUT=10000

# ===========================================
# SECURITY SETTINGS (PRODUCTION)
# ===========================================

# JWT secret for token generation (change in production)
# Generate a secure random string for production use
# JWT_SECRET=your-secure-jwt-secret-key-minimum-32-characters

# Encryption key for sensitive data (change in production)
# Generate a secure random string for production use
# ENCRYPTION_KEY=your-secure-encryption-key-minimum-32-characters

# Session settings (optional)
# SESSION_TIMEOUT=86400
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_DURATION=900

# ===========================================
# PRINTING & HARDWARE CONFIGURATION
# ===========================================

# Default printer settings (optional)
# DEFAULT_PRINTER=POS-Printer
# RECEIPT_WIDTH=80
# PRINT_LOGO=true

# Barcode scanner settings (optional)
# SCANNER_ENABLED=true
# SCANNER_PREFIX=
# SCANNER_SUFFIX=

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Logging level (error, warn, info, debug)
# LOG_LEVEL=info

# Log file settings (optional)
# LOG_TO_FILE=true
# LOG_FILE_SIZE=10485760
# LOG_MAX_FILES=5

# Performance monitoring (optional)
# ENABLE_ANALYTICS=false
# ANALYTICS_ENDPOINT=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Development-only settings (uncomment for development)
# DEBUG=true
# ELECTRON_ENABLE_LOGGING=true
# ENABLE_DEV_TOOLS=true
# HOT_RELOAD=true

# Development database path override (optional)
# DEV_DB_PATH=./dev-data

# ===========================================
# NETWORK & CONNECTIVITY
# ===========================================

# Network timeout settings (milliseconds)
# NETWORK_TIMEOUT=30000
# CONNECTION_RETRY_DELAY=5000

# Proxy settings (if required by your network)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080

# ===========================================
# BUSINESS CONFIGURATION DEFAULTS
# ===========================================

# Default business settings (can be overridden in app settings)
# DEFAULT_CURRENCY=USD
# DEFAULT_TAX_RATE=0.00
# DEFAULT_RECEIPT_FOOTER=Thank you for your business!

# Store operating hours (24-hour format)
# STORE_OPEN_TIME=08:00
# STORE_CLOSE_TIME=22:00

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Memory management
# MAX_MEMORY_USAGE=512
# GC_INTERVAL=300000

# Database performance
# DB_CACHE_SIZE=50
# DB_WRITE_INTERVAL=1000

# ===========================================
# NOTES
# ===========================================

# 1. Lines starting with # are comments and will be ignored
# 2. Remove the # at the beginning of a line to enable that setting
# 3. Always restart the application after changing environment variables
# 4. Keep sensitive information (secrets, keys) secure and never commit them
# 5. For production deployment, ensure all security-related variables are set
# 6. Test sync functionality in a controlled environment before production use
